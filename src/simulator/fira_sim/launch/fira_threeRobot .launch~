<?xml version="1.0" ?>
<launch>

  <arg name="gui" default="true" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
<!--    <arg name="world_name" value="$(find youbot_gazebo)/worlds/empty_room.world"/>-->
    <arg name="world_name" value="$(find fira_sim)/FIRA.world"/>
